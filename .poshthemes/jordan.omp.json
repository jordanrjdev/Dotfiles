{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "powerline",
          "foreground": "cyan",
          "properties": {
            "prefix": "",
            "postfix": " "
          }
        },
        {
          "type": "session",
          "style": "powerline",
          "foreground": "cyan",
          "properties": { "display_host": false }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "cyan",
          "properties": {
            "style": "full",
            "home_icon": "/home"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "lightYellow",
          "properties": {
            "prefix": "",
            "postfix": ""
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "node",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "lightGreen",
          "properties": {
            "prefix": " \uE718 ",
            "display_mode": "files"
          }
        }
      ]
    },

    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "style": "powerline",
          "foreground": "lightGreen",
          "properties": {
            "display_exit_code": false,
            "always_enabled": true,
            "error_color": "red",
            "prefix": "[I] \u279c"
          }
        }
      ]
    }
  ]
}
